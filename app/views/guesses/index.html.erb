<div class="container-fluid">
	<div class="row">
		<div class="col-md-12">
			<h2>Let's Guess Your Gender</h2>

			<%= bootstrap_form_for :person, :url =>url_for(controller: 'guesses', action: 'create'), :html => {:method => :post} do |f| %>
				<%= f.text_field :height, label: "height", hide_label: true, placeholder: "height in inches", value: "" %>
	  		<%= f.text_field :weight, label: "weight", hide_label: true, placeholder: "weight in pounds", value: "" %>
	  		<%= f.submit "Guess My Gender" %>
  		<% end %>

		</div>
	</div>
</div>